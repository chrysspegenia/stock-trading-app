<h2>Buy</h2>
<%= form_with(url: buy_trader_path, method: :post) do |form| %>
  <%= form.hidden_field :symbol, value: @company.symbol %>
  <%= form.hidden_field :action, value: 'buy' %>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, min: 1, required: true %>
  </div>

  <div class="actions">
    <%= form.submit "Buy" %>
  </div>
<% end %>

<div><%= link_to "Main", traders_path %></div>
